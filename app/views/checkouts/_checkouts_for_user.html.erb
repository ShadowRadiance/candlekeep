<p><%= pluralize(checkouts.size, 'item', 'items') %> checked out</p>

<% if checkouts.size > 0 %>

<div class="table-responsive">
  <table class="table table-hover">
    <thead class="thead-light">
    <tr>
      <th scope="col">Book</th>
      <th scope="col">Since</th>
      <th scope="col">Due</th>
      <% if user==current_user && display == :user %>
        <th scope="col">Return</th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <%= render partial: 'checkout', collection: checkouts, locals: {display: display} %>
    </tbody>
  </table>
</div>

<% end %>